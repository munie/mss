    # I) - Set environment
export PATH=/sbin/:/bin/:/usr/sbin/:/usr/bin/:/usr/local/sbin/:/usr/local/bin/
export LANG=C

    # II) - echo quintessence
echo "\
    # 0) - C
    struct:
    function:
    lib:
    # 1) - C++
    auto:
    lambda: encapsulation, simplify
    class: encapsulation, inherit, virtual
    base-class | interface | template: abstract_common, algorithm, protocol, COM
    base-class: base and simple abstract
    interface: dozens of same name functions, but different implementation
    template: there's less difference between classes expcept some types
    class_function_pointer(delegate): class_inter_call

    wtl callback: 精髓在于父类调用子类WndProc
    delegate:     精髓在于某一个的类将自己的类方法地址传递给另一个不相关的类，让其在WndProc中调用 (sender是前者，this是后者)
"

exit 0

SS_SERVER_ADDR=
SS_PASSWORD=

#depend() {
#
#}

start() {
	/opt/shadowsocks/shadowsocks/local.py -s $SS_SERVER_ADDR -k $SS_PASSWORD -d start
}

stop() {
	/opt/shadowsocks/shadowsocks/local.py -s $SS_SERVER_ADDR -d stop
}
